{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/apps/**/routeTree.gen.ts",
      "!*.lock"
    ]
  },
  "extends": ["ultracite/core", "ultracite/react"],
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "warn",
        "noDynamicNamespaceImportAccess": "warn",
        "noBarrelFile": "off"
      },
      "style": {
        "useFilenamingConvention": "off",
        "useBlockStatements": "off",
        "noEnum": "off",
        "useConsistentTypeDefinitions": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "nursery": {
        "noShadow": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "useAwait": "info",
        "noEmptyBlockStatements": "warn"
      }
    }
  }
}
